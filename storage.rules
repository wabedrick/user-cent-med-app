rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Manuals and documents for equipment
    match /manuals/{allPaths=**} {
      allow read: if request.auth != null; // any signed in user can read
      allow write: if request.auth != null && (request.auth.token.role == 'engineer' || request.auth.token.role == 'admin');
    }

    // Training videos and tutorials
    match /videos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.token.role == 'engineer' || request.auth.token.role == 'admin');
    }

    // Images for posts (restricted to engineer/admin for uploads)
    match /images/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && (request.auth.token.role == 'engineer' || request.auth.token.role == 'admin')
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Default deny other paths
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
