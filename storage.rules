rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Manuals and documents for equipment
    match /manuals/{allPaths=**} {
      allow read: if request.auth != null; // any signed in user can read
      allow write: if request.auth != null && (request.auth.token.role == 'engineer' || request.auth.token.role == 'admin');
    }

    // Training videos and tutorials
    match /videos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.token.role == 'engineer' || request.auth.token.role == 'admin');
    }

    // Default deny other paths
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
